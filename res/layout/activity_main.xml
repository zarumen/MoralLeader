<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >
    
    <LinearLayout 
        
        android:id="@+id/background_main"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="2"
        android:orientation="vertical" >
        
        <LinearLayout
            android:id="@+id/profile_part"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/profile_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/pro_img"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp" >
                    
                    <TextView
                        android:id="@+id/mrl_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MORAL ID"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/mrl_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name Surname"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/mrl_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/mrl_cscore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CURRENT SCORE"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/mrl_ascore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTUAL SCORE"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>
                
            </LinearLayout>
            
    	</LinearLayout>
    	
        <LinearLayout
        android:id="@+id/seperator"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#C7C7C7"
        android:orientation="horizontal" >
   		</LinearLayout>
    	
        <LinearLayout
            android:id="@+id/menu_part"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/main_menu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.28"
                android:numColumns="2" >
            </GridView>


        </LinearLayout>
        
    </LinearLayout>

    

</LinearLayout>
